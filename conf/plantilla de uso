<?php
require_once 'Database.php';

$db = new Database();
$pdo = $db->getConnection();

// Consulta segura con parÃ¡metros
$stmt = $pdo->prepare("SELECT * FROM mascota WHERE edad > :edad");
$stmt->bindValue(':edad', 1, PDO::PARAM_INT);
$stmt->execute();

$mascotas = $stmt->fetchAll();
print_r($mascotas);
